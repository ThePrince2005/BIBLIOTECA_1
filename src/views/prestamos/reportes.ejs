<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head', { title: 'Reporte de Préstamos' }) %>
    <link rel="stylesheet" href="/css/prestamos.css">
</head>
<body class="bg-light">
    <%- include('../partials/navbar') %>

    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Reporte de Préstamos</h1>
            <div class="flex space-x-2">
                <a href="/reportes/prestamos?format=pdf" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 flex items-center">
                    <i class="fas fa-file-pdf mr-2"></i> Exportar a PDF
                </a>
                <a href="/reportes/prestamos?format=excel" class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 flex items-center">
                    <i class="fas fa-file-excel mr-2"></i> Exportar a Excel
                </a>
            </div>
        </div>

        <!-- Estadísticas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-sm font-medium text-gray-500">Total Préstamos</h2>
                <p class="text-3xl font-bold text-gray-900"><%= estadisticas.total %></p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-sm font-medium text-gray-500">Activos</h2>
                <p class="text-3xl font-bold text-green-600"><%= estadisticas.activos %></p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-sm font-medium text-gray-500">Vencidos</h2>
                <p class="text-3xl font-bold text-red-600"><%= estadisticas.vencidos %></p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-sm font-medium text-gray-500">Devueltos</h2>
                <p class="text-3xl font-bold text-blue-600"><%= estadisticas.devueltos %></p>
            </div>
        </div>

        <!-- Tabla de Préstamos -->
        <div class="bg-white rounded-lg shadow overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estudiante</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Libro</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">F. Préstamo</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">F. Devolución</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (prestamos.length > 0) { %>
                        <% prestamos.forEach(prestamo => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= prestamo.id %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= prestamo.nombre_estudiante %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= prestamo.titulo %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= new Date(prestamo.fecha_prestamo).toLocaleDateString() %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= new Date(prestamo.fecha_devolucion_esperada).toLocaleDateString() %></td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <% if (prestamo.estado === 'activo') { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            Activo
                                        </span>
                                    <% } else if (prestamo.estado === 'vencido') { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                            Vencido
                                        </span>
                                    <% } else { %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                            Devuelto
                                        </span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-10 text-gray-500">No hay préstamos que coincidan con los filtros.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>