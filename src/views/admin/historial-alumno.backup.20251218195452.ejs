                resumen: btn.dataset.resumen,
                personajes: btn.dataset.personajes,
                tema: btn.dataset.tema,
                lecciones: btn.dataset.lecciones
              };
              verResultadoValidacion(btn.dataset.tipo, btn.dataset.id, datos);
